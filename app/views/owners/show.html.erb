<h1>Details for <%= @owner.name %></h1>
<p id="notice"><%= notice %></p>
<div id="lists">
	<h2>Lists:</h2>
  <% @lists_with_no_parents.each do |l| %>
	<div class="task">
	<%= link_to l.name, l %>

	<div class="numbers"><span class="unfinished">(<%= l.tasks.length - l.tasks.where(:status => "Finished").length %>)</span> <span class="finished"><%= l.tasks.length%></span></div>
		</div>
  <% end %>
</div>

<p>
</p>
<div class="overlay_trigger" rel="#new_task">Create a new list</div>
<div class="overlay" id="new_task">
	Create a new task here.
	<%= render 'lists/form', :@list => List.new, :params=> {:owner_id => @owner.id}  %>
</div>
<script>
$("div[rel]").overlay();
</script>