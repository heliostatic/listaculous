<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "25x10" %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_area :status, :size => "25x1" %>
  </div>

<% if not params[:list_id] %>
	<div class="field">
	  <%= f.label :list_id %><br />
	  <%= f.text_field :list_id %>
	</div>
<% else %>
	<div class="field">
    	<%= f.hidden_field :list_id, {:value => params[:list_id]} %>
	</div>
<% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
