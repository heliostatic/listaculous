<ul class="tasklist" id="list_<%= params[:cssid] || @cssid %>" data-listid="<%= params[:cssid] || @cssid %>">

<% @list.children.each do |t|%>
		<%= form_for t, :as => :list, :remote => true do |f|%>
			<%=f.hidden_field :case, :value=> 'status' %>
			<% if t.completed? %>
			<li class="task" id="<%= t.id %>">
			    <%= f.check_box :status,  {:class => 'checker'}   %>			
			<% else %>
			<li class="task finished" id="<%= t.id %>">
			    <%= f.check_box :status,  {:class => 'checker'} %>
			<% end %>
			<% if t.has_children? %>
				<span class="listExpander"></span>
			<% end %>
			<%= link_to t.name , t %>
		</li>
	<% end %>
<% end %>

</ul>