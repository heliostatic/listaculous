/* Breadcrumbs and Navigation */
body {
  padding-top: 50px;
  line-height:16px;
}
#breadcrumbs li {
	display:inline;
}
#breadcrumbs li a{
	text-decoration:none;
}
#breadcrumbs li a:hover{
	text-decoration:underline;
}
#breadcrumbs li:first-child {
	font-size:1.4em;
}
#breadcrumbs li:after {
	content:" > ";
}

/* Task List Styles */

li {
	list-style:none;
	position:relative;
}

#lists .numbers {
    display:inline;
}

li.task.finished > a {
    text-decoration:line-through;
}

ul.tasklist {
	margin-left:13px;
}

#adder {
  cursor: pointer;
  display: inline-block;
  background: url( <%= asset_path "plus-list.png" %>);
  width: 16px;
  height: 16px;
  margin-left:2px;
}

.listExpander {
  cursor:pointer;
	position:absolute;
	left:-13px;
	transition: transform .1s ease-in;
	-moz-transition: -moz-transform .1s ease-in;
	-webkit-transition: -webkit-transform .1s ease-in;
}
.listExpander:after {
	content:"â–¶";
}

li.expanded .listExpander {
	left:-15px;
	transform: rotate(90deg);
	-webkit-transform: rotate(90deg);
}
input.checker {
	margin-right:5px;
}
.tasklist .renderbug {
	margin-right:4px
}
div > ul {
  margin:0;
}

#createPrompt, #newTask {
  margin-bottom:2em;
}